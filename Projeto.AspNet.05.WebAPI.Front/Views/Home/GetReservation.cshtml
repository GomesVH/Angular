@*
    estabelecer a implementação da view GetReservation
*@

@* estabelecer a relação view com o model *@

@model Reserva

@{
    ViewData["Title"] = "Registro por id";
}

@* implementar a estrutura html necessaria *@

<h2>
    @ViewData["Title"]

    <a asp-action="Index" class="btn btn-sm btn-primary">
        <img src="~/css/NovaPasta/seta-para-a-esquerda.png"                                   style="max-width:70px;                                                                max-height:45px;                                                                      width: auto;                                                                         height: auto;"/>
    </a>

</h2>
<h3>@ViewBag.StatusCode</h3>

<form method="post">
    <div class="from-group">
        <label for="id">Id:</label>
        <input name="id" class="form-control" />
    </div>

    <div class="text-center">
        <button type="submit" class="btn btn-sm btn-primary">
            Obter Reserva
        </button>
    </div>
</form>

@* estabelecer uma table para a exibição do registro com seus dados especificos *@

@*seria ideal que fosse verificada se a reserva selecionada existe; Se, entao, existir será exibida na tabela *@

<h2>Reserva Selecionada</h2>

@if(Model != null)
{
<table class="table table-sm table-striped table-bordered m-2" >
    <thead>
        <tr>
            <th>Id</th>
            <th>Nome</th>
            <th>Local de Saida</th>
            <th>Local de chegada</th>
        </tr>
    </thead>
    <tbody>
        <tr>
            <td>@Model.Id</td>
            <td>@Model.Nome</td>
            <td>@Model.Sobrenome</td>
            <td>@Model.PontoA</td>
            <td>@Model.PontoB</td>
        </tr>
    </tbody>
</table>
}